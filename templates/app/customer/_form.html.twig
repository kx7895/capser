{% macro listElement(label, value) %}
    <div class="mb-2 row">
        <div class="col-4 fw-bold">
            {{ label }}:
        </div>
        <div class="col-8">
            {{ value|raw }}
        </div>
    </div>
{% endmacro %}

<div class="card mb-4" id="sectionStammdaten">
    <div class="card-header">Stammdaten</div>
    <div class="card-body">
        <fieldset class="border border-1 border-light mb-4 p-3">
            <legend class="h6">Basisangaben</legend>
            <div class="row g-3">
                <div class="col-md-12">
                    {{ form_widget(form.customerType) }}
                </div>
                <div class="col-md-8">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.shortName) }}
                </div>
                <div class="col-md-8">
                    {{ form_row(form.principal) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.ledgerAccountNumber) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-1 border-light mb-4 p-3">
            <legend class="h6">Anschrift</legend>
            <div class="row g-3">
                <div class="col-md-12">
                    {{ form_row(form.addressLine1) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.addressLine2) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.addressLine3) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.addressLine4) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.addressLineCountry) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-1 border-light mb-4 p-3">
            <legend class="h6">Steuerliche Angaben</legend>
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.vatId) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.vatNumber) }}
                </div>
                <div class="col-md-12">
                    {{ form_widget(form.vatExemptInvoicesAllowed) }}
                </div>
            </div>
        </fieldset>

        {% if showSingleSubmitButtons %}
            <div class="text-center mt-1">
                <button class="btn btn-primary">
                    {{ button_label|default('Speichern') }}
                </button>
            </div>
        {% endif %}
    </div>
</div>

